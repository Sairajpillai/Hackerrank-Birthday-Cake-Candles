public class Solution {
        public static void main(String[] args) {
    Scanner sc=new Scanner(System.in);
    int n=sc.nextInt();
    int[] arr=new int[n];
    int i;
    int counter=0;
    for(i=0;i<n;i++){
        arr[i]=sc.nextInt();
    }
    int max = Arrays.stream(arr).max().getAsInt();
    //System.out.println(max);
    for(i=0;i<n;i++){
       // for(int j=i+1;j<n;j++){
            if(arr[i]==max){
                counter++;
            }
            
        //}
    } 
    System.out.println(counter);
}
}
